<p id="notice"><%= notice %></p>

<h1>Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.name %></td>
        <td>
          <% if subscriber.is_active == true %>
            Activated
          <% else %>
            Deactivated
          <% end %>
        </td>

        <td><%= link_to 'Show', subscriber %></td>
        <% if subscriber.is_active == true %>
          <td>
            <td><%= link_to 'Deactivate', subscriber,  method: :patch, data: { confirm: 'Are you sure you want to deactivate this subscriber?' }%></td>
          </td>
        <% else %>
          <td>
            <td><%= link_to 'Activate', subscriber,  method: :patch, data: { confirm: 'Are you sure you want to activate this subscriber?' }%></td>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscriber', new_subscriber_path %>
